{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata", "jest"],
    "allowJs": true,
    "rootDir": "./",
    "outDir": "./dist",
    "declarationDir": "./dist/@types",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],                        
      "@infra/*": ["src/infra/*"],
      "@common/*": ["src/common/*"],
      "@constants/*": ["src/constants/*"],
      "@domain/*": ["src/domain/*"],
      "@config/*": ["src/config/*"],
      "@application/*": ["src/application/*"],
      "@tests/*": ["src/__tests__/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/**/*.ts", "src/**/*.ts", "src/**/**/*.test.ts, src/**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
